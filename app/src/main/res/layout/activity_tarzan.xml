<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tinkazorge.mad_libs.TarzanActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/madlib_text_tarzan"
        android:id="@+id/textview_madlib"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elegantTextHeight="false"
        android:textColor="#FF1493"
        android:textSize="20dp" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/adjective_1"
        android:hint="Adjective"
        android:layout_below="@+id/textview_madlib"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />


    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/plural_noun"
        android:hint="Plural Noun"
        android:layout_below="@+id/adjective_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/noun_1"
        android:hint="Noun"
        android:layout_below="@+id/plural_noun"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/place_1"
        android:hint="Place"
        android:layout_below="@+id/noun_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/plural_noun_2"
        android:hint="Plural Noun"
        android:layout_below="@+id/place_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/noun_3"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_alignTop="@+id/adjective_1"
        android:layout_alignRight="@+id/textview_madlib"
        android:layout_alignEnd="@+id/textview_madlib"
        android:hint="Noun" />

    <EditText

        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/adjective_3"
        android:hint="Adjective"
        android:layout_below="@+id/noun_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/adjective_4"
        android:hint="Place"
        android:layout_alignTop="@+id/place_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/adjective_7"
        android:layout_below="@+id/noun_3"
        android:layout_alignLeft="@+id/noun_3"
        android:layout_alignStart="@+id/noun_3"
        android:hint="Adjective" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/noun_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/plural_noun_2"
        android:hint="Noun" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/funny_noise"
        android:hint="Funny Noise"
        android:layout_below="@+id/adjective_2"
        android:layout_alignLeft="@+id/adjective_2"
        android:layout_alignStart="@+id/adjective_2"
        android:layout_alignRight="@+id/adjective_2"
        android:layout_alignEnd="@+id/adjective_2" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adjective_2"
        android:hint="Adjective"
        android:layout_below="@+id/persons_name"
        android:layout_alignLeft="@+id/persons_name"
        android:layout_alignStart="@+id/persons_name"
        android:layout_alignRight="@+id/persons_name"
        android:layout_alignEnd="@+id/persons_name" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plural_noun_3"
        android:layout_above="@+id/adjective_3"
        android:layout_alignLeft="@+id/adjective_7"
        android:layout_alignStart="@+id/adjective_7"
        android:layout_alignRight="@+id/adjective_7"
        android:layout_alignEnd="@+id/adjective_7"
        android:hint="Plural Noun" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/persons_name"
        android:layout_above="@+id/adjective_4"
        android:layout_alignLeft="@+id/plural_noun_3"
        android:layout_alignStart="@+id/plural_noun_3"
        android:layout_alignRight="@+id/plural_noun_3"
        android:layout_alignEnd="@+id/plural_noun_3"
        android:hint="Person&apos;s Name" />

    <Button
        android:textColor="#FF1493"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go!"
        android:id="@+id/go_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp" />


</RelativeLayout>
