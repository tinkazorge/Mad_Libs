<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tinkazorge.mad_libs.CircusActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/madlib_text_circus"
        android:id="@+id/textview_circus"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elegantTextHeight="false"
        android:textColor="#FF1493"
        android:textSize="20dp" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/adjective_1"
        android:hint="Adjective"
        android:layout_below="@+id/adjective_2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textview_circus"
        android:layout_alignEnd="@+id/textview_circus" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/adjective_2"
        android:hint="Adjective"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/plural_noun_2"
        android:hint="Plural Noun"
        android:layout_above="@+id/plural_noun_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/plural_noun_1"
        android:hint="Plural Noun"
        android:layout_above="@+id/adjective_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:hint="Bodypart"
        android:id="@+id/body_part"
        android:layout_alignTop="@+id/adjective_2"
        android:layout_alignLeft="@+id/animal"
        android:layout_alignStart="@+id/animal" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:hint="Noun"
        android:id="@+id/noun_1"
        android:layout_alignTop="@+id/plural_noun_2"
        android:layout_alignLeft="@+id/body_part"
        android:layout_alignStart="@+id/body_part" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:hint="Noun"
        android:id="@+id/noun_2"
        android:layout_alignTop="@+id/plural_noun_1"
        android:layout_alignLeft="@+id/noun_1"
        android:layout_alignStart="@+id/noun_1" />

    <EditText
        android:textColor="#FF1493"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/animal"
        android:hint="Animal"
        android:layout_below="@+id/body_part"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:textColor="#FF1493"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go!"
        android:id="@+id/go_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />


</RelativeLayout>
